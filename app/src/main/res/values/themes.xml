        <item name="colorSecondary">@color/bird_blue</item>
        <item name="colorSecondaryVariant">@color/bird_blue</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:colorBackground">@color/black_darkBlue</item>
